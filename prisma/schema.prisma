datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Image {
  id    String  @id @default(uuid())
  url   String?
  path  String?
  Admin Admin[]
}

model Admin {
  id       String  @id @default(uuid())
  password String
  name     String?
  phone    String?
  email    String  @unique
  location String?
  bio      String?
  image    Image?  @relation(fields: [imageId], references: [id])
  imageId  String?
}

model Project {
  id          String   @id @default(uuid())
  image       String
  title       String
  link        String
  source      String
  description String
  skills      Skills[]
}

model Skills {
  id          String    @id @default(uuid())
  name        String
  image       String
  projects    Project[]
  link        String
  description String
}

model TechnicalGrowth {
  id          String @id @default(uuid())
  title       String
  subtitle    String
  description String
  order       Int
}
